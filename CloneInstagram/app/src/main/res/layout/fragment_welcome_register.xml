<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register_txt_welcome"
                style="@style/Theme.CloneInstagram.TextViewBase.Form"
                android:text="@string/welcome_to_instagram"
               />

            <com.example.cloneinstagram.common.view.LoadingButton
                android:id="@+id/btn_welcome_continuee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:text="@string/continuee"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <TextView
        android:id="@+id/register_welcome_terms"
        style="@style/Theme.CloneInstagram.TextViewBase"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:padding="24dp"
        android:text="@string/agree_terms_policy"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>